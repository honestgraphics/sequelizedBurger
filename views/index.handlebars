<div class="container">

  <div class="row">
    <div class="center col-sm-12">
      <img src="/assets/images/burger.png" alt="burger">
      <h1>Eat-Da-Burger</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">

      <h2>Burgers Available To Eat!</h2>

      <ul>
        {{#each burgerData}} {{#unless this.devoured}}
        <li>
          {{this.id}}. {{this.burger_name}}
          <br />
          <button class="devour btn btn-primary btn-sm" data-id="{{this.id}}">Devour It!</button>

        </li>
        {{/unless}} {{/each}}
      </ul>

    </div>

    <div class="col-sm-6">

      <h2>Burgers That Have Been Eaten!</h2>

      {{#each burgerData}} {{#if this.devoured}}
      <li>
        {{this.id}}. {{this.burger_name}}

      </li>
      {{/if}} {{/each}}

    </div>

  </div>

  <div class="row">
    <div class="center col-sm-12">

      <h2>Add A Burger!</h2>

      <form class="addBurgerForm">
        <div class="form-group">
          <p>Enter a burger you want to order and click the Submit Order button.</p>
          <input type="text" id="burgerName" name="burgerName">
        </div>

        <button class="btn-primary" type="submit">Submit Order</button>
      </form>

    </div>

  </div>

  </div